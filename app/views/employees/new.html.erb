<%= form_with scope: :employee,url: employees_path,local: true do |form| %>
  <p>
    <%= form.label :employee_name %><br>
    <%= form.text_field :employee_name %>
  </p>
 
  <p>
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number %>
  </p>

 <p>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </p>

  <p>
  <%= form.label :salary %><br>
  <%= form.text_field :salary %>
  </p>
                
         
<%= form.collection_check_boxes :packages, Package.all, :id, :package_name, include_hidden: false %>




  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image, multiple: true %>
  </p>


 
  <p>
    <%= form.submit %>
  </p>

